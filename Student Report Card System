mark={}
def tol_mrk():
    
    Math = int(input('Math Marks out of 100: '))
    Science = int(input('Science Marks out of 100: '))
    Hindi = int(input('Hindi Marks out of 100: '))
    English = int(input('English Marks out of 100: '))
    Computer = int(input('Computer Marks out of 100: '))
    total=Math + Science + Hindi + English + Computer
    mark["Total Marks"] = total  
    print("Total Marks =", total)
    return total

      
def calc_per(total):
    cal=(total/500)*100
    mark["percentace"] = cal 
    print("percentace",cal)
    return cal


def grd_num(grd):
    
    if grd>=90:
        grade="Grade A"
    elif grd>=75:
        grade="Grade B"
    elif grd>=60:
        grade="Grade C"
    else:
        grade="Grade D"
    mark["Grade"] = grade
    print(grade)
    return grade

total = None
grd = None

user_name=input('Enter your name:')
user_class=input('Enter your class: ')
mark["Name"]=user_name
mark["class"]=user_class

for i in range(100):
    
    print("\n1.Total  2.Percentage  3.Grade  4.Show  5.Exit")
    ch = input("Choice: ")

    if ch == "1":
        total = tol_mrk()
    elif ch == "2":
        if total is None:
            print("Please calculate total first!")
        else:
            grd = calc_per(total)
    elif ch == "3":
        if grd is None:
            print("Please calculate percentage first!")
        else:
            grd_num(grd)
    elif ch == "4":
        print(mark)
    elif ch == "5":
        print("Exiting...")
        break
    else:
        print("Invalid choice!")
